{
  "name": "pester-test",
  "displayName": "Pester Tests",
  "description": "Pester Test Support using the native API",
  "version": "0.0.0-source",
  "publisher": "justingrote",
  "license": "MIT",
  "repository": "https://github.com/pester/vscode-adapter",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*.[tT]ests.[pP][sS]1"
  ],
  "main": "./dist/extension.js",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "scripts": {
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npx vsce package --no-git-tag-version",
    "watch": "npm run -S esbuild-base -- --watch --sourcemap",
    "lint": "eslint . --ext .ts,.tsx",
    "tscbuild": "tsc -p ./",
    "tscwatch": "tsc -watch -p ./",
    "download-api": "vscode-dts main",
    "postdownload-api": "vscode-dts main",
    "postinstall": "npm run download-api && npx patch-package",
    "vscode:prepublish": "npm run -S esbuild-base -- --minify"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/node-powershell": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "esbuild": "^0.12.15",
    "eslint": "^7.21.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.2",
    "vsce": "^1.96.1",
    "vscode-dts": "^0.3.1"
  },
  "dependencies": {
    "path": "^0.12.7",
    "tslog": "^3.2.0"
  }
}
